    "html": {
      "attributes": [
        {
          "name": "data-attr-*",
          "virtual": true,
          "description": "Sets an element’s attribute value based on an expression.",
          "doc-url": "https://data-star.dev/reference/attributes#data-attr",
          "value": {
            "kind": "expression",
            "type": [
              "string",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": [
                  {
                    "path": "/html/attributes",
                    "includeVirtual": false
                  }
                ],
                "template": [
                  "data-attr-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-attr"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-class-*",
          "virtual": true,
          "description": "Adds or removes a class from an element based on an expression.",
          "doc-url": "https://data-star.dev/reference/attributes#data-class",
          "value": {
            "kind": "expression",
            "type": [
              "boolean",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-class-",
                  {
                    "regex": "[-a-z0-9]+"
                  },
                  {
                    "items": "/js/datastar-class-modifiers",
                    "template": [
                      "data-class-",
                      "$...",
                      "#item:event name"
                    ],
                    "priority": "normal"
                  }
                ]
              },
