{
  "$schema": "../../../../schema.json",
  "name": "Datastar",
  "version": "1.0.0",
  "js-types-syntax": "typescript",
  "description-markup": "markdown",
  "default-icon": "datastar-icon.png",
  "contributions": {
    "js": {
      "events": [
        {
          "name": "interval"
        },
        {
          "name": "signals-change"
        },
        {
          "name": "raf"
        }
      ],
      "datastar-intersects-modifiers": [
        {
          "name": "full",
          "description": "Trigger when the full element is visible"
        },
        {
          "name": "half",
          "description": "Trigger when half of the element is visible"
        },
        {
          "name": "once",
          "description": "Only trigger the event once"
        }
      ],
      "datastar-on-modifiers": [
        {
          "name": "capture",
          "description": "Use a capture event listener"
        },
        {
          "name": "debounce",
          "description": "Debounce the event listener"
        },
        {
          "name": "debounce.500ms",
          "description": "Debounce for 1000 milliseconds"
        },
        {
          "name": "debounce.1s",
          "description": "Debounce for 1 second"
        },
        {
          "name": "debounce.leading",
          "description": "Debounce with leading edge"
        },
        {
          "name": "debounce.notrail",
          "description": "Debounce without trailing edge"
        },
        {
          "name": "delay",
          "description": "Delay the event listener"
        },
        {
          "name": "delay.1s",
          "description": "Delay for 1 second"
        },
        {
          "name": "duration",
          "description": "The interval duration"
        },
        {
          "name": "duration.500ms",
          "description": "Set an interval duration of 500 milliseconds"
        },
        {
          "name": "once",
          "description": "Only trigger the event listener once"
        },
        {
          "name": "outside",
          "description": "Triggers when the event is outside the element"
        },
        {
          "name": "passive",
          "description": "Do not call `preventDefault` on the event listener"
        },
        {
          "name": "throttle",
          "description": "Throttle the event listener"
        },
        {
          "name": "throttle.500ms",
          "description": "Throttle for 500 milliseconds"
        },
        {
          "name": "throttle.1s",
          "description": "Throttle for 1 second"
        },
        {
          "name": "throttle.nolead",
          "description": "Throttle without leading edge"
        },
        {
          "name": "throttle.notrail",
          "description": "Throttle without trailing edge"
        },
        {
          "name": "window",
          "description": "Attaches the event listener to the `window` element"
        }
      ],
      "datastar-persist-modifiers": [
        {
          "name": "session",
          "description": "Persists signals values in Session Storage"
        }
      ],
      "datastar-scroll-into-view-modifiers": [
        {
          "name": "auto",
          "description": "Scrolling is determined by the computed scroll-behavior CSS property"
        },
        {
          "name": "instant",
          "description": "Scrolling should be instant"
        },
        {
          "name": "focus",
          "description": "Focus the element after scrolling"
        },
        {
          "name": "hcenter",
          "description": "Scroll to the horizontal center of the element"
        },
        {
          "name": "hend",
          "description": "Scroll to the right of the element"
        },
        {
          "name": "hnearest",
          "description": "Scroll to the nearest horizontal edge of the element"
        },
        {
          "name": "hstart",
          "description": "Scroll to the left of the element"
        },
        {
          "name": "smooth",
          "description": "Scrolling should be animate smoothly"
        },
        {
          "name": "vstart",
          "description": "Scroll to the top of the element"
        },
        {
          "name": "vcenter",
          "description": "Scroll to the vertical center of the element"
        },
        {
          "name": "vend",
          "description": "Scroll to the bottom of the element"
        },
        {
          "name": "vnearest",
          "description": "Scroll to the nearest vertical edge of the element"
        }
      ],
      "datastar-signals-modifiers": [
        {
          "name": "ifmissing",
          "description": "Only set the signals if the key does not exist. This is useful for setting defaults without overwriting existing values"
        }
      ]
    },
    "html": {
      "attributes": [
        {
          "name": "data-attr-*",
          "virtual": true,
          "description": "Sets an elementâ€™s attribute value based on an expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-attr",
          "value": {
            "kind": "expression",
            "type": [
              "string",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": [
                  {
                    "path": "/html/attributes",
                    "includeVirtual": false
                  }
                ],
                "template": [
                  "data-attr-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-attr"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-class-*",
          "virtual": true,
          "description": "Adds or removes a class from an element based on an expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-class",
          "value": {
            "kind": "expression",
            "type": [
              "boolean",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": "/css/classes",
                "template": [
                  "data-class-",
                  "$...",
                  "#item:event name"
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-class"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-computed-*",
          "virtual": true,
          "description": "Creates a signal that is computed based on an expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-computed",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-computed-",
              {
                "regex": "[-a-z0-9]+"
              }
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-custom-validity",
          "virtual": true,
          "description": "Adds custom validity to an element using an expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-custom-validity",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-custom-validity"
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-indicator-*",
          "virtual": true,
          "description": "Creates a signal to track in-flight backend requests.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-indicator",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-indicator-",
                  {
                    "regex": "[-a-z0-9]+"
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-indicator"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-intersect",
          "virtual": true,
          "description": "Executes an expression on intersection with the viewport.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-intersect",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-intersects",
              {
                "items": "/js/datastar-intersects-modifiers",
                "template": [
                  "__",
                  "$...",
                  "#item:modifier"
                ],
                "required": false,
                "repeat": true
              }
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-on-*",
          "virtual": true,
          "description": "Executes an expression whenever an event is triggered on an element.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-on",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "items": "/js/events",
                "template": [
                  "data-on-",
                  "$...",
                  "#item:event name",
                  {
                    "items": "/js/datastar-on-modifiers",
                    "template": [
                      "__",
                      "$...",
                      "#item:modifier"
                    ],
                    "required": false,
                    "repeat": true
                  }
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-persist",
          "virtual": true,
          "description": "Persists all signals in local storage.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-persist",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-persist",
              {
                "items": "/js/datastar-persist-modifiers",
                "template": [
                  "__",
                  "$...",
                  "#item:modifier"
                ],
                "required": false,
                "repeat": true
              }
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-ref-*",
          "virtual": true,
          "description": "Creates a signal whose value references an element.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-ref",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-ref-",
                  {
                    "regex": "[-a-z0-9]+"
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-ref"
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-replace-url",
          "virtual": true,
          "description": "Replaces the URL in the browser with an evaluated expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-replace-url",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-replace-url"
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-signals-*",
          "virtual": true,
          "description": "Merges a signal into the existing signals.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-signals",
          "value": {
            "kind": "expression",
            "type": [
              "string",
              "object"
            ],
            "required": true
          },
          "pattern": {
            "or": [
              {
                "template": [
                  "data-signals-",
                  {
                    "regex": "[-a-z0-9]+"
                  },
                  {
                    "items": "/js/datastar-signals-modifiers",
                    "template": [
                      "__",
                      "$...",
                      "#item:modifier"
                    ],
                    "required": false,
                    "repeat": true
                  }
                ],
                "priority": "normal"
              },
              {
                "template": [
                  "data-signals",
                  {
                    "items": "/js/datastar-signals-modifiers",
                    "template": [
                      "__",
                      "$...",
                      "#item:modifier"
                    ],
                    "required": false,
                    "repeat": true
                  }
                ],
                "priority": "normal"
              }
            ]
          }
        },
        {
          "name": "data-scroll-into-view",
          "virtual": true,
          "description": "Scrolls the element into view.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-scroll-into-view",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-scroll-into-view",
              {
                "items": "/js/datastar-scroll-into-view-modifiers",
                "template": [
                  "__",
                  "$...",
                  "#item:modifier"
                ],
                "required": false,
                "repeat": true
              }
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-show",
          "virtual": true,
          "description": "Shows or hides an element based on whether an expression evaluates to `true` or `false`.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-show",
          "value": {
            "kind": "expression",
            "type": "boolean",
            "required": true
          },
          "pattern": {
            "template": [
              "data-show"
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-star-ignore",
          "virtual": true,
          "description": "Ignores an elementâ€™s attributes when Datastar applies plugins.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-star-ignore",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-star-ignore"
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-text",
          "virtual": true,
          "description": "Sets the text content of an element to the evaluated expression.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-text",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-text"
            ],
            "priority": "normal"
          }
        },
        {
          "name": "data-view-transition",
          "virtual": true,
          "description": "Sets the value of `view-transition-name` for use with the View Transition API.",
          "doc-url": "https://data-star.dev/reference/attribute_plugins#data-view-transition",
          "value": {
            "kind": "expression",
            "type": "string",
            "required": true
          },
          "pattern": {
            "template": [
              "data-view-transition"
            ],
            "priority": "normal"
          }
        }
      ],
      "elements": [
        {
          "name": "Standard HTML elements extension",
          "description": "This is a workaround to provide /js/properties on standard HTML elements.",
          "extension": true,
          "pattern": {
            "or": [
              "input",
              "textarea",
              "select",
              "checkbox",
              "radio"
            ]
          },
          "attributes": [
            {
              "name": "data-bind-*",
              "virtual": true,
              "description": "Creates a new signal and enables two-way binding between it and the element.",
              "doc-url": "https://data-star.dev/reference/attribute_plugins#data-bind",
              "value": {
                "kind": "expression",
                "type": "string",
                "required": true
              },
              "pattern": {
                "or": [
                  {
                    "template": [
                      "data-bind-",
                      {
                        "regex": "[-a-z0-9]+"
                      }
                    ],
                    "priority": "normal",
                    "required": false
                  },
                  {
                    "template": [
                      "data-bind"
                    ],
                    "priority": "normal"
                  }
                ]
              }
            }
          ]
        }
      ]
    }
  }
}