templ customValidityError() {
	@sampleHtmlCode("Example") {
		<form>
			<input data-bind-foo data-custom-validity="$foo === $bar ? '' : 'Field values must be the same.'" name="foo"/>
			<input data-bind-bar name="bar"/>
			<button>
				Submit form
			</button>
		</form>
	}
	@attributeDocs("computed")
}

