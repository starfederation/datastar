<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", false)

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const links = document.querySelectorAll('.demo-link');
        const currentPath = window.location.pathname;

        // Remove active class from all links
        links.forEach(l => l.classList.remove('active'));

        // If we're at the root, activate ActiveSearch
        if (currentPath === '/' || currentPath.toLowerCase() === '/home') {
            window.location.href = '/active-search';
        } else {
            // Otherwise highlight the current page link
            links.forEach(link => {
                if (link.getAttribute('href') === currentPath) {
                    link.classList.add('active');
                    // Scroll the active link into view with some padding
                    setTimeout(() => {
                        link.scrollIntoView({behavior: 'smooth', block: 'center'});
                    }, 100);
                }
            });
        }
    });
</script>
</body>
</html>
